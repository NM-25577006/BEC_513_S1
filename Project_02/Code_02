.pyx\u001b[0m in \u001b[0;36mpandas._libs.parsers.TextReader.__cinit__\u001b[0;34m()\u001b[0m\n","\u001b[0;31mEmptyDataError\u001b[0m: No columns to parse from file"]}],"source":["# Usage: zcat query.bed.gz | python script.py reference.hist > output.tsv\n","import matplotlib.pyplot as plt\n","import pandas as pd\n","from sys import stdin, argv, stdout, stderr\n","import numpy as np\n","\n","def read_bed_file():\n","    df = pd.read_csv(stdin, sep=\"\\t\", header=None, low_memory=False)\n","    df[\"frag_len\"] = df[2] - df[1]\n","    return df\n","\n","def load_reference(file_path):\n","    ref_df = pd.read_csv(file_path, sep=\"\\t\", header=None, names=[\"frag_len\", \"freq\"])\n","    return ref_df\n","\n","def calculate_sample_counts(ref_df, total_count, scale=3):\n","    ref_df = ref_df.copy()\n","    ref_df[\"to_sample\"] = np.round((ref_df[\"freq\"] * total_count) / scale).astype(int)\n","    return ref_df\n","\n","def sample_fragments(query_df, ref_df):\n","    samples = []\n","    for _, row in ref_df.iterrows():\n","        candidates = query_df[query_df[\"frag_len\"] == row[\"frag_len\"]]\n","        n_sample = min(row[\"to_sample\"], len(candidates))\n","        if n_sample > 0:\n","            sampled_subset = candidates.sample(n=n_sample, random_state=42)\n","            samples.append(sampled_subset)\n","    if samples:\n","        return pd.concat(samples)\n","    else:\n","        return pd.DataFrame(columns=query_df.columns)\n","\n","def plot_distributions(orig_df, ref_df, sampled_df):\n","    orig_dist = orig_df[\"frag_len\"].value_counts(normalize=True).sort_index()\n","    sampled_dist = sampled_df[\"frag_len\"].value_counts(normalize=True).sort_index()\n","\n","    plt.figure(figsize=(9, 6))\n","    plt.plot(orig_dist.index, orig_dist.values, color=\"mediumpurple\", lw=0.7,\n","             label=f\"Original (n={len(orig_df)})\")\n","    plt.plot(ref_df[\"frag_len\"], ref_df[\"freq\"], color=\"seagreen\", lw=0.7,\n","             label=\"Reference\")\n","    plt.scatter(sampled_dist.index, sampled_dist.values, color=\"deepskyblue\", marker=\"*\", s=30,\n","                label=f\"Sampled (n={len(sampled_df)})\")\n","\n","    plt.xlabel(\"Fragment Length (bp)\")\n","    plt.ylabel(\"Normalized Frequency\")\n","    plt.legend()\n","    plt.tight_layout()\n","    plt.savefig(\"rescaled_fragments.png\", dpi=300)\n","\n","\n","\n","query_df = read_bed_file()\n","reference_df = load_reference(argv[1])\n","rescaled_reference_df = calculate_sample_counts(reference_df, len(query_df), scale=3)\n","sampled_df = sample_fragments(query_df, rescaled_reference_df)\n","\n","sampled_df.to_csv(stdout, sep=\"\\t\", header=False, index=False)\n","\n","plot_distributions(query_df, reference_df, sampled_df)"]}]}